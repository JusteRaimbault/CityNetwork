;;explo specific setup
to setup-exploration
  ask paths [
    set diameter initial-diameter
    set path-length link-length
    set thickness 0.2
    set color scale-color grey diameter diameter-max diameter-min
  ]
  
  ;;kill abstract nw
  ask poles [ask my-real-links [die] die]
  
  reset-ticks
  
end