to setup
  clear-all
  resize-world -20 20 0 20
  set-patch-size 10
  set-default-shape vertices "dot"
  set-default-shape paths "line"
  set-default-shape poles "star"
  set diameter-min 0
  set diameter-max initial-diameter
  
  setup-vertices
  setup-paths
  setup-cities
  
  set nodes-number count vertices 
  
  reset-ticks
end

to setup-vertices
  ask patches [
    set pcolor white
    sprout-vertices 1 [
      set color black            
      set size 0.5
      set number who                          
    ]
  ]
end


to setup-paths
  ask vertices [
    create-paths-with other vertices in-radius 1.5 [
      set diameter initial-diameter
      let di 0
      let otherend end2
      ask end1 [ set di distance otherend ]
      set path-length di
      set thickness 0.2
      set color scale-color grey diameter diameter-max diameter-min
    ]
  ]
end

